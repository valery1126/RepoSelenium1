<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Account Tests">
    <test name="Login Tests - Chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="selenium.TestAccount"/>
        </classes>
    </test>
    <test name="Search Tests - Firefox">
        <parameter name="browser" value="firefox"/>
        <parameter name="searchCriteria" value="iphone"/>
        <parameter name="expectedResult" value="1"></parameter>
        <classes>
            <class name="selenium.TestSearch"/>
        </classes>
    </test>
</suite>